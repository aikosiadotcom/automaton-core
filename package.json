{
  "name": "@aikosia/automaton-core",
  "version": "1.0.0",
  "description": "for bot developer",
  "main": "./src/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aikosiadotcom/automaton-core"
  },
  "scripts": {
    "jsdoc": "cross-env NODE_ENV=production jsdoc -a all -r ./src -d docs/jsdoc",
    "release": "cross-env NODE_ENV=production node ./script/release.js",
    "test": "cross-env NODE_ENV=testing NODE_OPTIONS=--experimental-vm-modules ./node_modules/.bin/jest"
  },
  "keywords": [
    "aikosia",
    "automaton",
    "automation",
    "bot",
    "puppeteer",
    "playwright",
    "chromium",
    "framework"
  ],
  "files": [
    "src"
  ],
  "author": "firman",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.21.4",
    "@supabase/supabase-js": "^2.21.0",
    "@trenskow/parallel": "^0.1.3",
    "axios": "^1.3.6",
    "delay": "^5.0.0",
    "dotenv": "^16.0.3",
    "env-paths": "^3.0.0",
    "fs-extra": "^11.1.1",
    "json-validator": "^0.0.34",
    "node-cron": "^3.0.2",
    "node-envchecker": "^1.0.8",
    "p-retry": "^5.1.2",
    "playwright-core": "^1.32.3",
    "pretty-hrtime": "^1.0.3",
    "random": "^4.1.0",
    "read-pkg": "^8.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jsdoc": "^4.0.2",
    "node-jest-badges": "^1.3.12"
  },
  "jest": {
    "transform": {},
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "clover", "json", "lcov", "text",
      "json-summary"
    ],
    "reporters": [
      "default",
      ["jest-html-reporters", {
        "publicPath": "./coverage",
        "filename": "report.html",
        "openReport": false
      }]
    ],
    "testPathIgnorePatterns":["<rootDir>/src/error","<rootDir>/src/constanta.js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/error","<rootDir>/src/constanta.js"
    ]
  }
}
